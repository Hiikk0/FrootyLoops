<UserControl
    x:Class="FrootyLoops.UserControls.WorkplaceContent.TrackView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FrootyLoops.UserControls.WorkplaceContent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="480"
    MinHeight="240"
    mc:Ignorable="d">
    <Grid x:Name="TRACK_VIEW">
        <StackPanel>
            <hc:UniformSpacingPanel
                Margin="0,5,0,0"
                Orientation="Horizontal"
                Spacing="20"
                VerticalSpacing="20">
                <TextBlock
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Text="Duration" />
                <TextBox Width="100" />
                <CheckBox Content="FileDuration" Checked="CheckBox_Checked" />
            </hc:UniformSpacingPanel>
        </StackPanel>
    </Grid>
</UserControl>
