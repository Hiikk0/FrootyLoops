<UserControl
    x:Class="FrootyLoops.UserControls.SettingsContent.WhatsNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:FrootyLoops.UserControls.SettingsContent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nmx="clr-namespace:Neo.Markdig.Xaml;assembly=Neo.Markdig.Xaml"
    MinWidth="400"
    MinHeight="200"
    mc:Ignorable="d">
    <Grid Margin="5,0,5,20">
        <FlowDocumentReader
            x:Name="flowDocumentViewer"
            Background="#2B2A2D"
            BorderThickness="0,0,0,0"
            ClipToBounds="True"
            Foreground="#D9D9D9"
            Grid.IsSharedSizeScope="True"
            MaxZoom="280"
            MinZoom="10"
            ScrollViewer.CanContentScroll="True"
            ScrollViewer.HorizontalScrollBarVisibility="Visible"
            ScrollViewer.VerticalScrollBarVisibility="Visible"
            UseLayoutRounding="True"
            ViewingMode="Scroll" />
    </Grid>
</UserControl>
